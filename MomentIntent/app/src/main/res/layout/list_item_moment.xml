<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_activated">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:id="@+id/moment_list_item_publicCheckbox"
        android:enabled="false"
        android:focusable="false"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textStyle="bold"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:id="@+id/moment_list_item_titleTextView"
        android:layout_toLeftOf="@id/moment_list_item_publicCheckbox"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/moment_list_item_titleTextView"
        android:layout_toLeftOf="@id/moment_list_item_publicCheckbox"
        android:text="Small Text"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:id="@+id/moment_list_item_dateTextView"/>
</RelativeLayout>